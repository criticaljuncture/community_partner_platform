<%= breadcrumb [
  ['Service Types', service_types_path],
  [truncate(@service_type.name, length: 20), service_type_path(@service_type)]
] %>


<div class="row-fluid">
  <div class="span12">
    <%= page_header(@service_type.name, "") do %>
      <%= link_to 'Edit', edit_service_type_path(@service_type), class: "btn btn-primary" %>
    <% end %>

    <div class="table_wrapper">
     <table class="table table-striped">
        <thead>
          <tr>
            <th>Community School Elements</th>
            <th class="center">Schools</th>
            <th class="center">Organizations</th>
            <th class="center">Community Programs</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td><%= @service_type.quality_elements.map{|qe| link_to(qe.name, quality_element_path(qe))}.join(', <br />').html_safe %></td>
            <td class="center"><%= @service_type.schools.uniq.count %></td>
            <td class="center"><%= @service_type.organizations.uniq.count %></td>
            <td class="center"><%= @service_type.community_programs.count %></td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>
