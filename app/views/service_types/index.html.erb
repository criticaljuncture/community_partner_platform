<%= breadcrumb [['Service Types', service_types_path]] %>

<div class="row-fluid">
  <div class="span12">
    <%= page_header("Service Types", "") do %>
      <%= link_to 'Create New Service Type', new_service_type_path, class: "btn btn-primary" %>
    <% end %>

    <div class="table_wrapper">
      <table class="table table-striped table-hover table-sorter service_types">
        <thead>
          <tr>
            <th>Service Type</th>
            <th><%= I18n.t('quality_element.class.name') %></th>
            <th class="center">Schools</th>
            <th class="center">Organizations</th>
            <th class="center">Community Programs</th>
            <th class="actions buttons sorter-false filter-false"></th>
          </tr>
        </thead>

        <tbody>
          <% @quality_elements.each do |quality_element| %>
            <% quality_element.service_types.each do |service_type| %>
              <tr>
                <td><%= service_type.name %></td>
                <td><%= quality_element.name %></td>
                <td class="center"><%= service_type.schools_for_quality_element_service_type(quality_element).count %></td>
                <td class="center"><%= service_type.organizations_for_quality_element_service_type(quality_element).count %></td>
                <td class="center"><%= service_type.community_programs_for_quality_element_service_type(quality_element).count %></td>
                <td class="actions buttons center">
                  <%= link_to 'view',
                    service_type_path(service_type),
                    class: "btn btn-small btn-info" %>
                  <%= link_to 'edit',
                    edit_service_type_path(service_type),
                    class: "btn btn-small btn-primary" %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


