<% form = nil %>
<% simple_form_for @form_object, method: :put,
  html: {class: "form-horizontal #{@form_object.to_s.gsub('_', '-')}"},
  wrapper: :horizontal_form,
  wrapper_mappings: {boolean: :horizontal_boolean} do |f| %>
  <% form = f %>
<% end %>

<%= form.input :user_id,
  as: :select,
  collection: @collection.users.
    accessible_by(current_ability).
    sort_by(&:full_name),
  label_method: :full_name,
  required: @form_object == :community_program ? true : false,
  wrapper_html: {class: 'clear both'} %>
