<%= simple_form_for @school_program, method: :post,
  html: {class: "form-horizontal school-program"},
  wrapper: :horizontal_form,
  wrapper_mappings: {boolean: :horizontal_boolean} do |f| %>

  <%= render :partial => 'form', :locals => {
    f: f,
    community_program: @school_program.community_program,
    policy: @school_program.community_program.public_policy
  } %>
<% end %>
