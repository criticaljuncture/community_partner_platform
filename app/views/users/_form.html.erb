<%= field_set_tag "User Information" do %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :title %>
  <%= f.input :email, required: true %>
  <%= f.input :phone_number, placeholder: "(555) 555-5555" %>
  <% if local_assigns[:display_active_attribute] %>
  <%= f.input :active, as: :boolean %>
  <% end %>
<% end %>


<%= field_set_tag "User Access" do %>
  <%= f.input :primary_role,
    as: :select,
    collection: roles,
    include_blank: true,
    selected: f.object.primary_role.try(:id),
    required: true %>

  <%= f.input :organization_id,
    as: :select,
    collection: organizations,
    selected: f.object.organization_id.present? ? f.object.organization_id : (current_user.organization_id.nil? ? "" : current_user.organization_id),
    label: 'Organization',
    required: true,
    disabled: true,
    include_blank: true,
    wrapper_html: {class: "hidden"} %>

  <% if schools.present? %>
    <% if schools.size > 1 %>
      <%= f.input :school_ids,
        as: :select,
        collection: schools,
        label: 'Schools',
        required: true,
        disabled: true,
        input_html: {multiple: true},
        wrapper_html: {class: "hidden"} %>
    <% else %>
      <%= f.input :school_ids,
        as: :select,
        collection: schools,
        label: 'Schools',
        required: true,
        selected: schools.first.try(:id),
        wrapper_html: {class: "hidden"} %>
    <% end %>
  <% end %>
<% end %>

<div class="row">
  <div class="col-sm-3 hidden-sm"></div>
  <div class="col-sm-9">
    <%= f.submit f.object.new_record? ? 'Create' : 'Save',
      class: "btn btn-large btn-success" %>
  </div>
</div>
