<%= simple_form_for @user, method: :post,
  html: {class: "form-horizontal modal-user"},
  wrapper: :horizontal_form,
  wrapper_mappings: {boolean: :horizontal_boolean} do |f| %>

  <%= render :partial => 'form', :locals => {
      f: f,
      roles: @roles,
      schools: @schools,
      organizations: @organizations
    } %>
<% end %>
