<div class="row">
  <div class="<%= bootstrap_col xs: 12, md: 12 %>">
    <%= page_header('Sign in', "") %>

    <div class="form_wrapper">
      <%= semantic_form_for resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"} do |f| %>
        <%= f.inputs do %>
          <%= f.input :email, as: :email, autofocus: true %>
          <%= f.input :password, as: :password %>

          <% if devise_mapping.rememberable? -%>
            <%= f.input :remember_me, as: :boolean, input_html: { checked: 'checked' } %>
          <% end -%>
        <% end %>

        <%= f.actions do %>
          <%= f.button 'Sign in', class: "btn btn-large btn-success" %>
        <% end %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
