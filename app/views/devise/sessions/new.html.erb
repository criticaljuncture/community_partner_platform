<div class="row-fluid">
  <div class="span12">
    <div class="header">
      <h1>Sign in</h1>
    </div>

    <div class="form_wrapper">
      <%= semantic_form_for resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"} do |f| %>
        <%= f.inputs do %>
          <%= f.input :email, as: :email, autofocus: true %>
          <%= f.input :password, as: :password %>

          <% if devise_mapping.rememberable? -%>
            <%= f.input :remember_me, as: :boolean, input_html: { checked: 'checked' } %>
          <% end -%>
        <% end %>
        
        <%= f.actions do %>
          <%= f.button 'Sign in', class: "btn btn-success" %>
        <% end %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
