<%= page_header('Sign up', "") %>

<div class="row">
  <div class="<%= bootstrap_col xs: 12, md: 12 %>">
    <div class="form_wrapper">
      <%= semantic_form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"} do |f| %>
        <%= f.inputs do %>
          <%= f.input :email, as: :email, autofocus: true %>
          <%= f.input :password, as: :password %>
        <% end %>

        <%= f.actions do %>
          <%= f.button 'Sign up', class: "btn btn-success" %>
        <% end %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
