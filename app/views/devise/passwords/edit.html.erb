<div class="row-fluid">
  <div class="span12">
    <div class="header">
      <h2>Change your password</h2>
    </div>

    <div class="form_wrapper">
      <%= semantic_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-horizontal" } do |f| %>
        <%= f.inputs do %>
	  <%= f.input :password, as: :password, autofocus: true %>
	  <%= f.input :password_confirmation, as: :password, required: true %>
	  <%= f.input :reset_password_token, as: :hidden %>
        <% end %>

        <%= f.actions do %>
          <%= f.button 'Change my password', class: "btn btn-success" %>
        <% end %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
