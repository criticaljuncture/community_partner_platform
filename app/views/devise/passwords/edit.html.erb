<%= page_header('Change your password', "icon-cpp-users") %>

<div class="row">
  <div class="<%= bootstrap_col xs: 12, md: 12 %>">
    <div class="form_wrapper">
      <%= simple_form_for resource,
        as: resource_name,
        url: password_path(resource_name),
        html: {class: "form-horizontal change-password"},
        method: :put,
        wrapper: :horizontal_form do |f| %>

        <%= devise_error_messages! %>

    	  <%= f.input :password, as: :password, autofocus: true %>
    	  <%= f.input :password_confirmation, as: :password, required: true %>
    	  <%= f.input :reset_password_token, as: :hidden %>

        <div class="row">
          <div class="col-sm-3 hidden-sm"></div>
          <div class="col-sm-9">
            <%= f.submit 'Change my password',
              class: "btn btn-large btn-success" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
