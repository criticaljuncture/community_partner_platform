<div class="row-fluid">
  <div class="span12">
    <div class="header">
      <h1>Forgot your password?</h1>
    </div>
    
     <div class="form_wrapper">
      <%= semantic_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" } do |f| %>
        <%= f.inputs do %>
          <%= f.input :email, as: :email, autofocus: true %>
        <% end %>

        <%= f.actions do %>
          <%= f.button 'Send me password reset instructions', class: "btn btn-success" %>
        <% end %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
