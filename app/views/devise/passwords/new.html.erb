<%= page_header('Forgot your password?', "icon-cpp-users") %>

<div class="row">
  <div class="<%= bootstrap_col xs: 12, md: 12 %>">
    <div class="form_wrapper">
      <%= simple_form_for resource,
        as: resource_name,
        url: password_path(resource_name),
        html: {class: "form-horizontal reset-password"},
        wrapper: :horizontal_form do |f| %>

        <%= f.input :email, as: :email, autofocus: true %>

        <div class="row">
          <div class="col-sm-3 hidden-sm"></div>
          <div class="col-sm-9">
            <%= f.submit 'Send me password reset instructions',
              class: "btn btn-large btn-success" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
