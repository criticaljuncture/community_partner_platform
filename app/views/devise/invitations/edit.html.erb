<div class="row-fluid">
  <div class="span12">
    <div class="header">
      <h1><%= t 'devise.invitations.edit.header' %></h1>
    </div>

    <div class="form_wrapper">
      <%= semantic_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, class: "form-horizontal" } do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :invitation_token %>

        <%= f.inputs do %>
          <%= f.input :password, as: :password, autofocus: true %>
          <%= f.input :password_confirmation, as: :password, required: true %>
        <% end %>

        <%= f.actions do %>
          <%= f.button t("devise.invitations.edit.submit_button"), class: "btn btn-success" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
