<%= breadcrumb [['Schools', public_schools_path]] %>

<%= page_header("Schools", "icon-cpp-school", wrapper_class: 'schools') %>

<div class="row">
  <div class="<%= bootstrap_col xs: 12, md: 12 %>">
    <div class="table_wrapper">
      <table class="table table-striped table-hover table-sorter">
        <thead>
          <tr>
            <th>School</th>
            <th class="center filter-false">Community Programs</th>
            <th class="center filter-false">Participating Organizations</th>
            <th class="center">Community School Elements</th>
            <th class="sorter-false filter-false"></th>
          </tr>
        </thead>

        <tbody>
          <% @schools_presenter.schools.each do |school| %>
            <tr>
              <td><%= school.name %></td>
              <td class="center"><%= school.community_program_count %></td>
              <td class="center"><%= school.organization_count %></td>
              <td class="center"><%= school.quality_element_list %></td>
              <td class="center">
                <%= link_to_gicon('view',
                  public_school_path(school.id),
                  class: "btn btn-small btn-info",
                  icon: 'eye-open') %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
