<h3>The admin search page!</h3>

<%= search_form_for @query, url: admin_search_index_path do |f| %>
  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>

  <%= f.submit %>
<% end %>

<% if @params  %>
  <div class="table_wrapper">
    <table class="table table-striped table-hover admin-table organization-status">
      <thead>
        <tr>
          <th>Program Name</th>
          <th>Organization</th>
          <!-- <th>Schools</th> -->
        </tr>
      </thead>

      <tbody>
        <% @results.each do |program| %>
          <tr>
            <td><%= program.name %></td>
            <td><%= program.organization.name %></td>
            <!-- <td>program.schools</td> -->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
