<%= breadcrumb [['Schools', schools_path], [@school.name, school_path(@school)], ["Edit School", ""]] %>

<div class="row-fluid">
  <div class="span12">
    <div class="header">
      <h1><%= @school.name %></h1>
    </div>

    <div class="form_wrapper">
      <%= semantic_form_for @school, method: :put, html: {class: "form-horizontal"} do |f| %>
        <%= render :partial => 'form', :locals => {:f => f} %>
      <% end %>
    </div>
  </div>
</div>

