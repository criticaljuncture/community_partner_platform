<div class="table_wrapper">
  <table class="table table-striped table-hover table-sorter">
    <thead>
      <tr>
        <th>School</th>
        <th class="center filter-false">Community Programs</th>
        <th class="center filter-false">Participating Organizations</th>
        <th class="center filter-false">Community School Elements Covered</th>
        <th class="sorter-false filter-false"></th>
      </tr>
    </thead>

    <tbody>
      <% schools_presenter.schools.each do |school| %>
        <tr>
          <td><%= school.name %></td>
          <td class="center"><%= school.community_program_count %></td>
          <td class="center"><%= school.organization_count %></td>
          <td class="center"><%= quality_elements_coverage_display(school.quality_element_count) %></td>
          <td class="center">
            <%= link_to('view', school_path(school.id), class: "btn btn-small btn-info") if can? :show, School %>
            <%= link_to('edit', edit_school_path(school.id), class: "btn btn-small btn-info") if can? :edit, School %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
