<div class="table_wrapper">
  <table class="table table-striped table-hover table-sorter">
    <thead>
      <tr>
        <th>School</th>
        <th class="center">Community Programs</th>
        <th class="center">Participating Organizations</th>
        <th class="center">Community School Elements Covered</th>
        <th class="sorter-false filter-false"></th>
      </tr>
    </thead>

    <tbody>
      <% schools.each do |school| %>
        <tr>
          <td><%= school.name %></td>
          <td class="center"><%= school.community_programs.count %></td>
          <td class="center"><%= school.organizations.uniq.count %></td>
          <td class="center"><%= quality_elements_coverage_display(school) %></td>
          <td class="center">
            <%= link_to('view', school_path(school), class: "btn btn-small btn-info") if can? :show, school %>
            <%= link_to('edit', edit_school_path(school), class: "btn btn-small btn-info") if can? :edit, school %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
