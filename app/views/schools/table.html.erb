<div class="table_wrapper">
  <table class="table table-striped table-hover table-sorter">
    <thead>
      <tr>
        <th>School</th>
        <th class="center filter-false">Community Programs</th>
        <th class="center filter-false">Participating Organizations</th>
        <th class="center filter-false"><%= I18n.t('quality_element.class.name').pluralize %> Covered</th>
        <th class="sorter-false filter-false"></th>
      </tr>
    </thead>

    <tbody>
      <% @schools_presenter.schools.each do |school| %>
        <tr>
          <td><%= school.name %></td>
          <td class="center"><%= school.community_program_count %></td>
          <td class="center"><%= school.organization_count %></td>
          <td class="center">
            <%= quality_elements_coverage_display(school.quality_element_count) %>
          </td>
          <td class="center">
            <%= link_to_gicon('view',
              school_path(school.id),
              class: "btn btn-small btn-info",
              icon: 'eye-open') if can? :show, school.school %>

            <%= link_to_gicon('edit',
              edit_school_path(school.id),
              class: "btn btn-small btn-primary",
              icon: 'pencil') if can?(:update, school.school) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
