<%= breadcrumb [['Schools', schools_path]] %>

<div class="row-fluid">
  <div class="span12">
    <div class="header">
      <h1>Schools</h1>
      <%= link_to 'Create New School', new_school_path, class: "btn btn-primary" %>
    </div>

    <div class="table_wrapper">
      <table class="table table-striped table-hover table-sorter">
        <thead>
          <tr>
            <th>School</th>
            <th class="center">Region</th>
            <th class="center">Organizations</th>
            <th class="center">School Quality Indicator Sub Areas Covered</th>
	    <th class="sorter-false filter-false"></th>
          </tr>
        </thead>

        <tbody>
          <% @schools.each do |school| %>
            <tr>
              <td><%= school.name %></td>
              <td class="center"><%= school.region.try(:name) %></td>
              <td class="center"><%= school.community_partners.count %></td>
              <td class="center"><%= school_quality_indicator_sub_area_display(school) %></td>
              <td class="center">
                <%= link_to 'view', school_path(school), class: "btn btn-small btn-info" %>
                <%= link_to 'edit', edit_school_path(school), class: "btn btn-small btn-info" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
