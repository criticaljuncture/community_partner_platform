<%= breadcrumb [
  ['Schools', schools_path],
  ['Create', ""]
] %>

<%= page_header('Create New School', "icon-cpp-school") %>

<div class="row">
  <div class="<%= bootstrap_col xs: 12, md: 12 %>">
    <div class="form_wrapper">
      <%= simple_form_for @school, method: :post,
        html: {class: "form-horizontal school"},
        wrapper: :horizontal_form do |f| %>
          <%= render partial: 'form', locals: {f: f} %>
      <% end %>
    </div>
  </div>
</div>
