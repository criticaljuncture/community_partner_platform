<%= columnar_table_block 'Organization Description',
  class: 'organization-description',
  columns: {xs: 12, md: 12} do %>

    <tr>
      <td><%= I18n.t('organization.mission_statement') %></td>
      <td>
        <%= organization.mission_statement %>
      </td>
    </tr>

    <tr>
      <td><%= I18n.t('organization.services_description') %></td>
      <td>
        <%= organization.services_description %>
      </td>
    </tr>

    <% if current_user %>
    <tr>
      <td><%= I18n.t('organization.program_impact') %></td>
      <td>
        <%= organization.program_impact %>
      </td>
    </tr>
    <% end %>
<% end %>
