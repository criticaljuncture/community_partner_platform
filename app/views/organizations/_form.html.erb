<% verification ||= false %>

<%= f.input :verification,
    as: :hidden,
    value: verification %>

<%= field_set_tag 'Organization Basics' do %>
  <%= f.input :name %>

  <%= f.input :address %>
  <%= f.input :city %>
  <%= f.input :zip_code %>

  <%= f.input :phone_number,
    placeholder: "555-555-5555" %>

  <%= f.input :url,
    placeholder: "http://example.com" %>
<% end %>

<%= field_set_tag 'Organization Details' do %>
  <%= f.input :legal_status_id,
    as: :select,
    collection: LegalStatus.for_select,
    required: true %>

  <%= f.input :mou_on_file, as: :boolean %>
  <%= f.input :mission_statement, as: :text %>
  <%= f.input :services_description, as: :text %>
  <%= f.input :program_impact, as: :text %>
  <%= f.input :cost_per_student, as: :text %>
<% end %>

<% if can?(:manage_district_details, :organization) %>
  <%= field_set_tag 'District Details' do %>
    <%= f.input :legislative_file_number %>
    <%= f.input :notes %>
  <% end %>
<% end %>

<div class="row">
  <div class="col-sm-3 hidden-sm"></div>
  <div class="col-sm-9">
    <% save_label = current_user.role?(:organization_member) && @organization.verification_required? ? 'Save and Continue' : 'Save' %>
    <%= f.submit save_label, class: "btn btn-large btn-success" %>
  </div>
</div>
