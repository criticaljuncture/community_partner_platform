<%= breadcrumb [
  ['Partner Organizations', organizations_path],
  [truncate(@organization.name, length: 20), organization_path(@organization)],
  ['Edit', ""]
] %>

<% alert_notice(
    :warning, 'exclamation-sign',
    t('organizations.messages.unverified_organization.edit').html_safe,
  ) if @decorated_organization.organization_verifiable? %>

<%= page_header("Edit #{@organization.name}", "icon-cpp-small-business") %>

<div class="row">
  <div class="<%= bootstrap_col xs: 12, md: 12 %>">
    <div class="form_wrapper">
      <%= simple_form_for @organization, method: :put,
        html: {class: "form-horizontal"},
        wrapper: :horizontal_form,
        wrapper_mappings: {boolean: :horizontal_boolean} do |f| %>
          <%= render partial: 'form', locals: {
            f: f,
            decorated_organization: @decorated_organization
          } %>
      <% end %>
    </div>
  </div>
</div>
