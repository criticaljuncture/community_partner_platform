<div class="table_wrapper">
  <table class="table table-striped table-hover table-sorter">
    <thead>
      <tr>
        <th>Organization</th>
        <th>Community School Elements</th>
        <th>Service Types</th>
        <th class="center">Active Schools</th>
        <th class="center">Active Programs</th>
        <th class="sorter-false filter-false"></th>
      </tr>
    </thead>

    <tbody>
      <% @organizations.each do |organization| %>
        <tr>
          <td><%= organization.try(:name) %></td>
          <td><%= organization.quality_elements.uniq.map{|qe| qe.name}.join(', <br />').html_safe %></td>
          <td><%= organization.service_types.uniq.map{|cp| cp.name}.join(', <br />').html_safe %></td>
          <td class="center"><%= organization.cached_community_programs.count %></td>
          <td class="center"><%= organization.cached_schools.count %></td>
          <td class="center buttons">
            <%= link_to 'view',
              organization_path(organization),
              class: "btn btn-small btn-info" %>
            <%= link_to( 'edit',
              edit_organization_path(organization),
              class: "btn btn-small btn-info") if can?(:edit, organization) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
